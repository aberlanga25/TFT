<MDCustomIconItem>:
    text: root.text

    AvatarSampleWidget:
        source: root.icon


nav_layout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        drawer_logo: 'logo.png'
        NavigationDrawerToolbar:
            title: 'TFT'
    MyLayout:
        scr_mngr: scr_mngr
        orientation: 'vertical'


        ScreenManager:

            transition: CardTransition()
            id: scr_mngr
            Screen:
                name: 'tier'
                id: 'tier'
                Toolbar:
                    id: tools
                    title: "Your Profile"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.96}
                    md_bg_color: app.theme_cls.primary_color
                    background_palette: 'DeepPurple'
                    background_hue: 'A400'
                    left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer() ]]

            Screen:
                name: 'champs'
                id: 'champs'

                Toolbar:
                    id: tools
                    title: "Your Profile"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.96}
                    md_bg_color: app.theme_cls.primary_color
                    background_palette: 'DeepPurple'
                    background_hue: 'A400'
                    left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer() ]]
                MDLabel:
                    id: 'Profile_String'
                    font_size: 90
                    text: "Brian Zheng"
                    halign: 'center'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.85}

            Screen:
                name: 'items'
                id: 'items'
                ScrollView:
                    do_scroll_x: False
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 2700
                        Toolbar:
                            id: tools
                            title: "Items"
                            pos_hint: {'center_x': 0.5, 'center_y': 0.96}
                            md_bg_color: app.theme_cls.primary_color
                            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer() ]]
                        MDLabel:
                            text: "Base"
                            font_style: 'Title'
                            theme_text_color: 'Primary'
                            pos_hint: {'x': 0.05, 'center_y': 0.75}
